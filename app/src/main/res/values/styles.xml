<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>



    <style name="text_title_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text_title_middle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/main_textSize_title_middle</item>
    </style>

    <style name="text_title_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/main_textSize_title_right</item>
    </style>

    <style name="text_item_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="text_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_item</item>
        <item name="android:layout_marginTop">@dimen/marginTop_item</item>
    </style>

    <style name="layout_item_unit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_item_small</item>
        <item name="android:layout_marginTop">@dimen/marginTop_item_unit</item>
        <item name="android:background">@color/click</item>
    </style>

    <style name="text_item_unit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_item_unit</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_item</item>
    </style>

    <style name="image_item_select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/image_select</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="image_item_line_v">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_item_right_sign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_item_sign_right</item>
    </style>

    <style name="edit_item_sign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_item_sign_right</item>
        <item name="android:hint">0</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/draw_cursor</item>
    </style>

    <style name="text_item_left_sign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="image_item_track">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="text_item_left_track">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_item_arrow_goto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:background">@mipmap/image_arrow_right</item>
    </style>

    <style name="button_facebook">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
